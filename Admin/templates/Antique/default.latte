{block content}
	
	{include ../tabs.latte active => 'antique'}

	<h1>{$actualPage->getTitle()}</h1>
	
	<ul class="nav nav-tabs" id="myTab">
		<li {if $active == "statistics"}class="active"{/if}><a class="ajax" n:href="Antique:default idPage => $idPage">{_'Summary'}</a></li>
		<li {if $active == "rts"}class="active"{/if}><a class="ajax" n:href="Antique:rts idPage => $idPage">{_'RTS'}</a></li>
	  </ul>
	
	<table class="table table-responsive table-bordered">
		<tr>
			<th>{_'Count of categories'}</th>
			<th>{_'Count of products'}</th>
			<th>{_'Count of orders'}</th>
			<th>{_'Total sum of orders'}</th>
		</tr>
		<tr>
			<td>{$counts['categories']}</td>
			<td>{$counts['products']}</td>
			<td>{$counts['orders']}</td>
			<td>{$counts['ordersTotalPrice']|price}</td>
		</tr>
	</table>
		
{/block}